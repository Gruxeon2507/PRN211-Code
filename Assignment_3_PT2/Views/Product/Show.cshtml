@{
}
@using Assignment_3_PT2.Models
@model Product
<div>
    <form id="fr" asp-action="Show" asp-controller="Product" method="post">
        Product Code:
        <select name="productCode" onchange="change()">
            @foreach (Product p in ViewBag.Categories)
            {
                <option value="@p.ProductCode">@p.ProductCode</option>
            }
        </select><br />

        <div>
            Product name: <input type="text" asp-for="ProductName" />
            <input type="submit" value="Filter By Name" formaction="FilterByName" />
            <br />
        </div>

        Unit: <input type="text" asp-for="Unit" /><br />

        Price: Old <input type="text" name="OldPrice" /> --> New: <input type="text" asp-for="Price" />
        <input type="submit" value="Filter By Price" formaction="FilterByPrice" />
        <br />

        Image: <input type="text" asp-for="Image" />
        <input type="submit" value="Filter By Image" formaction="FilterByImage" />
        <br />

        <input type="submit" value="Update" formaction="Update" />
        <input type="submit" value="Reset" formaction="Reset" />
    </form>

    <div>
        <table border="1px">
            <tr>
                <td>Ma Hang</td>
                <td>Ten Hang</td>
                <td>DVT</td>
                <td>Gia</td>
                <td>Image</td>
            </tr>
            @foreach (Product p in ViewBag.Products)
            {
                <tr>
                    <td>@p.ProductCode</td>
                    <td>@p.ProductName</td>
                    <td>@p.Unit</td>
                    <td>@p.Price</td>
                    <td>@p.Image</td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    //Submit Form
    function change() {
        document.getElementById("fr").submit();
    }
</script>