@{
}
@using Question2.Models
<style>
    .container {
        display: flex;
    }
    .left{
        width:25%;

    }
    .right{
        width:75%;
        border-left:1px solid gray;
    }
    .header{
        border-bottom:1px solid gray;
        font-weight:bold;
    }
    table{
        width:100%;
    }
    td{
        width:15%;
    }
</style>
<div class="container">
    <div class="left">

        <h1>Customer</h1>
        @foreach (Customer c in ViewBag.Customers)
        {
            <div>

           <a href="/Orders/ListByCustomer/@c.CustomerId">@c.ContactName</a>
            </div>
        }
    </div>
    <div class="right">
        <h1>List Of Order</h1>
        <table>
            <tr class="header">
                <td>OrderDate</td>
                <td>RequiredDate</td>
                <td>ShippedDate</td>
                <td>Freight</td>
                <td>Customer</td>
                <td>Action</td>
            </tr>
            @foreach (Order order in ViewBag.orders)
            {
                <tr>

                    <td>@order.OrderDate</td>
                    <td>@order.RequiredDate</td>
                    <td>@order.ShippedDate</td>
                    <td>@order.Freight</td>
                    <td>@order.Customer.ContactName</td>
                    <td><a href="/Orders/Details/@order.OrderId">Details</a></td>
                </tr>
            }
        </table>
    </div>
</div>